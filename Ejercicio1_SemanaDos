namespace ejerciciosSemana2
{
    class Program
    {
        static void Main(string[] args)
        {
            //Desarollar un programa en el cual se ingresen cuatro numeros, calcular
            //y mostrar la suma de los primeros y el prodcuto del tercero con el cuarto.

            Console.WriteLine("Por favor digite cuatro numeros : ");
            Console.WriteLine("Digite el primer numero:");
            double n1 = double.Parse(Console.ReadLine());

            Console.WriteLine("Digite el segundo numero:");
            double n2 = double.Parse(Console.ReadLine());

            Console.WriteLine("Digite el tercer numero:");
            double n3 = double.Parse(Console.ReadLine());

            Console.WriteLine("Digite el cuarto numero:");
            double n4 = double.Parse(Console.ReadLine());

            double suma = n1 + n2;
            double producto = n3 * n4;

            Console.WriteLine($"La suma de los primeros numeros es: {suma}");
            Console.WriteLine($"El producto del tecer numero con el cuarto es: {producto}");

            //no cerrar consola
            Console.ReadLine();


        }

    }
}

